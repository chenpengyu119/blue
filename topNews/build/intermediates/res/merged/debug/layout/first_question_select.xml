<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title_bar"
            layout="@layout/title_bar" />
        <TextView
            android:id="@+id/shuti"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="智能刷题库"
            android:textSize="20sp"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"/>

        <LinearLayout
            android:id="@+id/title0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/shuti"
            android:layout_marginLeft="10dp"
            >

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:layout_height="40dp"
                    android:id="@+id/select1"
                    android:layout_weight="1"
                    android:text="会计基础"
                    android:textSize="@dimen/abc_action_bar_title_text_size"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:layout_height="40.0dip"
                    android:id="@+id/select2"
                    android:text="财经法规"
                    android:textSize="@dimen/abc_action_bar_title_text_size"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:layout_height="40.0dip"
                    android:id="@+id/select3"
                    android:text="会计电算化"
                    android:textSize="@dimen/abc_action_bar_title_text_size"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:layout_height="40.0dip"
                    android:id="@+id/select4"
                    android:text="财税主管"
                    android:textSize="@dimen/abc_action_bar_title_text_size"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

        </LinearLayout>

        <View
            android:id="@+id/category_line2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#000000"
            android:layout_below="@+id/title0"/>

        <TextView
            android:id="@+id/yuce"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_below="@+id/category_line2"
            android:text="真题预测分数"
            android:textSize="16sp"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:textColor="#1DE9B6"/>

        <View
            android:id="@+id/category_line6"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_below="@+id/yuce"/>

        <TableLayout
            android:id="@+id/tongji"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_below="@+id/yuce"
            android:background="#E0E0E0">

            <TableRow>

                <RelativeLayout
                    android:id="@+id/true_count"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    >
                    <TextView
                        android:id="@+id/true_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="做对"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="#ababa4"
                        android:layout_marginRight="10dip"
                        android:layout_marginLeft="20dip"
                        />
                    <TextView
                        android:id="@+id/zero"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_toRightOf="@+id/true_text"
                        android:layout_centerVertical="true"
                        android:textColor="#ababa4" />

                </RelativeLayout>




                <ImageView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:src="@drawable/yuan"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/false_count"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    >


                    <TextView
                        android:id="@+id/one"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"

                        android:layout_centerVertical="true"
                        android:textColor="#ababa4"

                        android:layout_toRightOf="@+id/false_text"
                        android:layout_marginLeft="10dip"
                        />

                    <TextView
                        android:id="@+id/false_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="做错"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dip"
                        android:layout_centerVertical="true"
                        android:textColor="#ababa4"
                        />

                </RelativeLayout>

            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:background="#F5F5F5"
            android:id="@+id/zhangjielianxi"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_below="@+id/tongji"
            android:layout_marginTop="15dip">

            <View
                android:id="@+id/category_line7"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffffff"
                />

            <TextView

                android:id="@+id/zhangjie"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="章节练习"
                android:textSize="@dimen/abc_action_bar_title_text_size"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:background="#F5F5F5"
            android:id="@+id/zhenti"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_below="@+id/zhangjielianxi"
            android:layout_marginTop="15dip">

                <View
                    android:id="@+id/category_line9"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ffffff"
                    android:layout_alignParentTop="true" />

                <TextView

                    android:id="@+id/zhenti2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="真题"
                    android:textSize="@dimen/abc_action_bar_title_text_size"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dip"
                    />
        </RelativeLayout>

        <RelativeLayout
            android:background="#F5F5F5"
            android:id="@+id/shoucang"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_below="@+id/zhenti"
            android:layout_marginTop="15dip">

            <View
                android:id="@+id/category_line8"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffffff"
                android:layout_alignParentTop="true" />

            <TextView

                android:id="@+id/zhenti3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="收藏"
                android:textSize="@dimen/abc_action_bar_title_text_size"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                />
        </RelativeLayout>





    </RelativeLayout>
</ScrollView>